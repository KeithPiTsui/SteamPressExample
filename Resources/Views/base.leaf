<!DOCTYPE html>
<html lang="en">
<head>
    <!-- This must be first in the <head> -->
    #embed("headContent")

    #import("head")
</head>

<body>
    <div id="content">

        <nav class="navbar navbar-light bg-faded navbar-toggleable-md">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#()navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="/">
                SteamPress
            </a>
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item #if(blog_index_page) {active}"><a href="/blog/" class="nav-link">Blog</a></li>
                    <li class="nav-item #if(about_page) {active}"><a href="/about/" class="nav-link">About</a></li>
                </ul>
                #if(user) {
                #if(blog_post_page) {
                <div class="navbar-nav nav-item"><a href="/blog/admin/posts/#(post.id)/edit/" class="nav-link">Edit Post</a></div>
                }
                <div class="navbar-nav nav-item #if(blog_admin_page) {active}"><a href="/blog/admin/" class="nav-link">Blog Admin</a></div>
                }
                <div class="navbar-nav nav-item"><a href="https://github.com/brokenhandsio/SteamPress" target="_blank" class="nav-link">SteamPress @ Github</a></div>
            </div>
        </nav>

        #import("body")

    </div> <!-- content -->

    #embed("footerAndScripts")
    #import("scripts")
</body>
</html>
